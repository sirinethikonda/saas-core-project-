# --- Database Configuration ---
# Root credentials used to initialize the container
MYSQL_ROOT_PASSWORD=your_secure_password
MYSQL_DATABASE=saas_db

# Optional: Non-root user credentials
MYSQL_USER=saas_user
MYSQL_PASSWORD=your_user_password

# --- Spring Boot / Hibernate Connection ---
# Use 'database' if running in Docker, 'localhost' if running locally
DB_HOST=database
DB_PORT=3306
DB_NAME=saas_db
DB_USER=root
DB_PASSWORD=your_secure_password

# --- Security Configuration ---
# Generate a long, secure hex string for production
JWT_SECRET=your_secret_key_here
# Validity in milliseconds (e.g., 86400000 for 24h)
JWT_EXPIRATION=86400000

# --- Server & Network ---
SERVER_PORT=5000
FRONTEND_URL=http://localhost:3000